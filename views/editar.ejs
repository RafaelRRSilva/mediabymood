
<body>
    <%- include('./partials/header') %>
    <link rel="stylesheet" href="/css/styleSemFundo.css">
    <link rel="stylesheet" href="/css/editar.css">
    
    <nav id="nav-adm">
       
        <ul>
            <li><a href="/">Home</a></li>
            </ul>
    </nav>
<div class="geral">
<div class="conteudo">
    
        <form  id="formulario" method="POST" action="/editar/<%= filme.id %>?_method=PUT" enctype="multipart/form-data">
       <div class="fornome">
        <label>
             <p class="no">
             Nome:</p>
            <input type="text" name="filme" id="nome" placeholder="Digite o nome do filme ou da série">
        </label>
        </div>
    <div class="plat">
        <label>
            <p class="pla">
            Plataforma:</p>
            <input type="text" name="Plataforma" id="Plataforma" placeholder="Plataforma ">
           
            </label>
    </div>
     <div class="resum">
        <label class="re">
            <p class="re"> Resumo:</p>
            <input class="re" type="text" name="resumo" id="resumo"  placeholder="Resumo">
            
          
               
        </label>
     </div>
            <div class="humos">
            <p class="hu"> Humores:</p>
            <br>
            <label  for="Triunfo">Triunfo</label>
            <input  type="checkbox" name="Humores" id="Triunfo" value="Triunfo">
            
            <label  for="Triste">Triste</label>
            <input  type="checkbox" name="Humores" id="Triste" value="Triste">
           
            <label  for="Medo">Medo</label>
            <input  type="checkbox" name="Humores" id="Medo" value="Medo">

            <label  for="Alegre">Alegre</label>
            <input  type="checkbox" name="Humores" id="Alegre" value="Alegre">

            <label  for="Apaixonado">Apaixonado</label>
            <input  type="checkbox" name="Humores" id="Apaixonado" value="Apaixonado">
            </div>
<br>
            <div class="duracao">

             <label>
            <p class="dur">  Duração:</p>
            <input type="number" name="duracao" id="duracao"   placeholder="duração">
            </label>
         <div class="anofilme">
         <label>
         <p class="an">  Ano:</p>  
        <input type="number" name="ano" id="ano"   placeholder="ano">
        </label>
        </div> 
           <div class="foto">
           <label>
            <br>
           <p class="ft">  Foto:</p>
           
            <div class="imagem">Clique para selecione imagem</div>
            <input accept="image/*" type="file" name="img" id="img">
            </label>
            </div> 
                       <div class="salvar">
                       <button type="submit">Salvar</button>
                       </div>
    </form>
   
</div>
</div>


</body>

</html>