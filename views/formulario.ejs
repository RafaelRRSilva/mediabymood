<%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
    <link rel="stylesheet" href="/css/formulario.css">
    
    <nav id="nav-adm">
       
        <ul>
            <li><a href="/">Home</a></li>
        </ul>
        <ul>
            <li><a href="/lista">Lista</a></li>
        </ul>
    </nav>
    <div class="geral">
       <div class="conteudo">
           <div class="msg"> 
              <% if (locals.mensagemCadastroFilme) { %>
            <p><%= mensagemCadastroFilme %> </p>   
              <% } %>
           </div>
    
            <form id="formulario" method="POST" action="/formulario" enctype="multipart/form-data">
       <div class="nome">
        <label>
             <p class="no">
             Nome:</p>
            <input type="text" name="nome" id="nome" placeholder="Digite o nome do filme ou da série">
        </label>
    </div>

    <p class="ret"> Resumo:</p>
    <div class="resumo">

        <label >

            <input class="re" type="text" name="resumo" id="resumo"  placeholder="Resumo">

        </label>
    </div>
            <div class="humo">
           <p class="hu"> Humores:</p>
            <% for(let h of humores){%>
                <div>
                    <input class="caixa1" type="checkbox" name="Humores" id="<%= h.nome %>" value="<%= h.id %>">
                    <label class="caixa1" for="<%= h.nome %>"><%= h.nome %></label>

                </div>
            <% } %> 
    </div>      

<br>
    <div class="duracao">

      <label>
      <p class="dur">  Duração:</p>
      <br>
      <input type="number" name="duracao" id="duracao"   placeholder="duração">
      </label>
    </div>
           <div class="ano">
            <label>
            <p class="an">  Ano:</p> 
            <br> 
            <input type="number" name="ano" id="ano"   placeholder="ano">
            </label>
          </div> 
           
  
            <br>
          
         <div class="foto">
            <label>
            <div class="ims"><p> Clique e selecione imagem: </p></div>
               <br>
            <input class="im" accept="image/*" type="file" name="img" id="img">
             </label>
         </div> 
       <div class="salvar">
    <button class="bt" type="submit">Salvar</button>
</div>

    </form>

</div>
</body>
</html>